# Server
HOST=0.0.0.0
PORT=8000
RELOAD=0

# Serial
ARDUINO_BAUD=115200
ARDUINO_PORT=          # например /dev/ttyACM0 или COM11
SERVO_PWR_MODE=ARDUINO # ARDUINO или EXTERNAL

# Logging profiles
LOG_PROFILE=DEFAULT    # DEFAULT | HTTP_DEBUG | SERIAL_DEBUG | FULL_DEBUG | QUIET

# Or manual logging (если LOG_PROFILE не задан)
LOG_LEVEL=INFO
LOG_REQUEST_BODY=0
MAX_BODY_PREVIEW=800
SERIAL_LOG=0
SERIAL_MAX_PREVIEW=200

# WS
WS_PING_INTERVAL=5
WS_PING_TIMEOUT=15
WS_MAX_RATE_HZ=30
WS_STOP_ON_CLOSE=1

# Telemetry
CPU_PERCENT_INTERVAL=0.10
STREAM_INTERVAL=1.0
